<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="IsAnswered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtIsAnswered"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/txtCreationDate"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        <TextView
                android:text="CreationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCreationDate"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/txtIsAnswered"
                android:layout_marginLeft="123dp" android:layout_marginStart="123dp"/>
    </LinearLayout>
    <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:id="@+id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtIsAnswered" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/txtLink" app:layout_constraintVertical_bias="0.47000003"
            android:layout_height="200dp"/>
    <TextView
            android:text="Link"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/txtLink"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>
    <TextView
            android:text="tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTags"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLink"/>
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:visibility="visible"/>
</LinearLayout>